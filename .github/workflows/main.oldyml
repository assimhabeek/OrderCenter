# This is a basic workflow to help you get started with Actions

name: Staging CI

# Controls when the action will run. 
on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]
  workflow_dispatch:


jobs:
  build-deply:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v2
        with:
          fetch-depth: 2
      - name: Setup PHP
        uses: shivammathur/setup-php@v2
        with:
          php-version: '7.4'
          extensions: dom, curl, libxml, mbstring, zip, pcntl, pdo, json
          ini-values: post_max_size=256M, max_execution_time=180
          coverage: xdebug
          tools: php-cs-fixer, phpunit

      - name: Install Composer Dependencies
        run: composer install --no-ansi --no-interaction --no-scripts --no-suggest --no-progress --prefer-dist
        working-directory: './server'

      - name: Sync Client files
        uses: SamKirkland/FTP-Deploy-Action@4.0.0
        with:
          server: waws-prod-blu-203.ftp.azurewebsites.windows.net
          username: orders-center\$orders-center
          password: ${{ secrets.FTP_PASSWORD }}
          protocol: ftps
          local-dir: ./client/dist/
          server-dir: /site/wwwroot/

      - name: Sync Server files
        uses: SamKirkland/FTP-Deploy-Action@4.0.0
        with:
          server: waws-prod-blu-203.ftp.azurewebsites.windows.net
          username: orders-center\$orders-center
          password: ${{ secrets.FTP_PASSWORD }}
          protocol: ftps
          local-dir: ./server/
          server-dir: /site/wwwroot/api/



